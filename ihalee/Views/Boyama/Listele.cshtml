@model List<Boyama>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content app-content mt-0">
    <div class="side-app">

        <!-- CONTAINER -->
        <div class="main-container container-fluid">

            <!-- PAGE-HEADER -->
          


            <!-- PAGE-HEADER END -->
            <!-- Row -->
            <div class="row mt-5">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">

                            <div class="col-11 ml-3">
                                <h3 class="card-title">Boyama İhalesi Ekle</h3>
                            </div>
                            <div class="col-5">
                                <a asp-controller="Boyama" asp-action="Ekle">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="35" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus-square"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line x1="12" y1="8" x2="12" y2="16"></line><line x1="8" y1="12" x2="16" y2="12"></line></svg>
                                </a>
                            </div>


                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered border text-nowrap mb-0" id="basic-edit">
                                    <thead>
                                        <tr>
                                            <th>Boyama ID</th>
                                            <th>Renk</th>
                                            <th>Oda Sayisi</th>
                                            <th>Metre Kare</th>
                                            <th>Baslama Tarihi</th>
                                            <th>Boyama Niteligi</th>
                                            <th name="bstable-actions">İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (Boyama boyama in Model)
                                        {
                                            <tr>
                                                <td>@boyama.BoyamaID</td>
                                                <td>@boyama.Renk</td>
                                                <td>@boyama.OdaSayisi</td>
                                                <td>@boyama.MetreKare</td>
                                                <td>@boyama.BaslamaTarihi</td>
                                                <td>@boyama.BoyamaNiteligi</td>
                                                <td name="bstable-actions">
                                                    <div class="btn-list">
                                                        <a asp-controller="Boyama" asp-action="Duzenle" asp-route-id="@boyama.BoyamaID" id="bEdit" title="Düzenle" class="btn btn-sm btn-primary">
                                                            <span class="fe fe-edit"> </span>
                                                        </a>

                                                        <a asp-controller="Boyama" asp-action="Sil" asp-route-id="@boyama.BoyamaID" id="bDel" title="Sil" class="btn  btn-sm btn-danger">
                                                            <span class="fe fe-trash-2"> </span>
                                                        </a>

                                                        <a asp-controller="Boyama" asp-action="Detay" asp-route-id="@boyama.BoyamaID" id="bDel" title="Detay" class="btn  btn-sm btn-dark">
                                                            <span class="fe fe-info"> </span>
                                                        </a>

                                                        <button id="bAcep" type="button" class="btn  btn-sm btn-primary" style="display:none;">
                                                            <span class="fe fe-check-circle"> </span>
                                                        </button>
                                                        <button id="bCanc" type="button" class="btn  btn-sm btn-danger" style="display:none;">
                                                            <span class="fe fe-x-circle"> </span>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Row -->
            <!-- Row -->
            <!-- End Row -->
            <!-- Row -->
            <!-- End Row -->
        </div>
        <!-- CONTAINER CLOSED -->

    </div>
</div>